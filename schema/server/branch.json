{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "0.0.1",
  "type": "object",
  "properties": {
    "name": {
      "type": ["null", "string"]
    },
    "commit_hash": {
      "type": "string"
    },
    "time": {
      "type": "number"
    },
    "message": {
      "oneOf": [
        { "type": "null" },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    }
  },
  "required": ["name", "commit_hash", "time", "message"],
  "additionalProperties": false
}
