{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "0.0.1",
  "type": "object",
  "properties": {
    "default_branch": {
      "oneOf": [
        { "type": "null" },
        { "$ref": "branch.json" }
      ]
    },
    "branches": {
      "type": "array",
      "items": {
        "$ref": "branch.json"
      }
    }
  },
  "required": ["default_branch", "branches"],
  "additionalProperties": false
}
